@{
    ViewBag.Title = "Items";
    ViewBag.Section = "Items";
    @model List<Yearnly.Model.UserItem>
}

<p>All your items will be here. If you'd like, you can <a class="button" href="/items/add">add one</a>.</p>

<div class="panel has-overlay" id="item_overlay">
    <div class="has-overlay-guts">
        <div class="group item-overlay-details">
            <a class="item-link" href=#">http://apple.com/sjdoifis</a>
            <h2>Colosseo Letterpress Print</h2>
            <span class="item-price">$50</span>
        </div>
    </div>
</div>

<div class="items">
    @foreach (var row in Model)
    {
        <div class="item group thing">

            <div class="item-guts">
                <h2 class="item-title">@row.Title</h2>
                <a class="item-link" href="@row.Link">@row.Link</a>
                <span class="item-price">$50</span>
                <span class="dibs-called" title="Jordan called dibs">Jordan called dibs</span>
                <a class="activate-panel item-comments" title="7 comments">7</a>
            </div>
        </div>


