@{
    ViewBag.Title = "Edit";
    ViewBag.Section = "Lists";
    @model Yearnly.Model.UserList
}

<h1>Editing @Model.Name</h1>
@{
    if (Model != null)
    {

    <form method="post" action="/lists/saveedit">
        <fieldset class="group">
            <label for="listtitle">List Title</label>
            <input type="text" name="Name" value="@Model.Name" id="listtitle" />
            <input type="hidden" name="Id" value="@Model.Id" />
        </fieldset>
        <fieldset class="group">
            <input type="submit" class="button left" value="Save" />
        </fieldset>
    </form>
    }
    else
    {
    <p>There doesn't seem to be an item to edit....</p>   
    <a href="/lists">Go Back to my List</a>
    }
}
